<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 bg-gradient-hero">
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-primary/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      
      <div class="inline-flex items-center space-x-2 bg-success/10 border border-success/20 rounded-full px-4 py-2 mb-6 animate-fade-in">
        <span class="text-sm">üõ°Ô∏è</span>
        <span class="text-success text-sm font-medium">
          {{ 'sections_custom.hero.trusted_badge' | t }}
        </span>
      </div>

      <h1 class="text-5xl md:text-7xl font-black mb-6 animate-fade-in" style="animation-delay: 0.2s;">
        <span class="text-gradient">{{ 'sections_custom.hero.main_heading' | t | split: ' ' | first: 2 | join: ' ' }}</span>
        <br>
        <span class="text-white">{{ 'sections_custom.hero.main_heading' | t | split: ' ' | last: 2 | join: ' ' }}</span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.4s;">
        {{ 'sections_custom.hero.subheading' | t }}
        <span class="text-primary font-semibold">Delivered in seconds.</span>
      </p>

      <div class="flex flex-wrap justify-center gap-6 mb-10 animate-fade-in" style="animation-delay: 0.6s;">
        <div class="flex items-center space-x-2">
          <span class="text-warning">‚ö°</span>
          <span class="text-white font-medium">{{ 'sections_custom.hero.instant_delivery' | t }}</span>
        </div>
        <div class="flex items-center space-x-2">
          <span class="text-yellow-400">üèÜ</span>
          <span class="text-white font-medium">{{ 'sections_custom.hero.verified_products' | t }}</span>
        </div>
        <div class="flex items-center space-x-2">
          <span class="text-primary">‚≠ê</span>
          <span class="text-white font-medium">{{ 'sections_custom.hero.five_star_support' | t }}</span>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.8s;">
        <a href="/collections/all" class="btn btn-primary btn-lg group">
          {{ 'sections_custom.hero.browse_products' | t }}
          <span class="ml-2 group-hover:translate-x-1 transition-transform">‚Üí</span>
        </a>
        <a href="/collections/featured" class="btn btn-outline btn-lg">
          {{ 'sections_custom.hero.view_featured_deals' | t }}
        </a>
      </div>

      <div class="mt-12 animate-fade-in" style="animation-delay: 1s;">
        <p class="text-gray-400 text-sm mb-4">{{ 'sections_custom.hero.trusted_by' | t }}</p>
        <div class="flex justify-center items-center space-x-8 opacity-60">
          <div class="text-2xl font-bold text-primary">10K+</div>
          <div class="w-px h-8 bg-gray-600"></div>
          <div class="text-2xl font-bold text-primary">4.9‚òÖ</div>
          <div class="w-px h-8 bg-gray-600"></div>
          <div class="text-2xl font-bold text-primary">24/7</div>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-primary/50 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-primary rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Premium Digital Products Store",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
