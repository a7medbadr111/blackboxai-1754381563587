<footer class="footer bg-card border-t border-gray-600 mt-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      {%- comment -%} Brand Section {%- endcomment -%}
      <div class="lg:col-span-1">
        <a href="{{ routes.root_url }}" class="flex items-center space-x-2 mb-4">
          <span class="text-2xl">üëë</span>
          <span class="text-xl font-bold text-gradient">{{ shop.name | default: 'BadRex Store' }}</span>
        </a>
        <p class="text-gray-300 mb-6">
          Your trusted marketplace for premium digital products, games, and software. 
          Instant delivery, verified products, lifetime support.
        </p>
        
        {%- comment -%} Trust Indicators {%- endcomment -%}
        <div class="flex flex-wrap gap-4">
          <div class="flex items-center space-x-2">
            <span class="text-success">üõ°Ô∏è</span>
            <span class="text-xs text-success">SSL Secured</span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="text-warning">‚ö°</span>
            <span class="text-xs text-warning">Instant Delivery</span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="text-yellow-400">üèÜ</span>
            <span class="text-xs text-yellow-400">Verified Products</span>
          </div>
        </div>
      </div>

      {%- comment -%} Quick Links {%- endcomment -%}
      <div>
        <h3 class="font-semibold text-white mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href="/collections/all" class="text-gray-300 hover:text-primary transition-colors">
              All Products
            </a>
          </li>
          <li>
            <a href="/collections" class="text-gray-300 hover:text-primary transition-colors">
              Categories
            </a>
          </li>
          <li>
            <a href="/collections/featured" class="text-gray-300 hover:text-primary transition-colors">
              Featured
            </a>
          </li>
          <li>
            <a href="/collections/new" class="text-gray-300 hover:text-primary transition-colors">
              New Arrivals
            </a>
          </li>
          <li>
            <a href="/collections/deals" class="text-gray-300 hover:text-primary transition-colors">
              Special Deals
            </a>
          </li>
        </ul>
      </div>

      {%- comment -%} Support {%- endcomment -%}
      <div>
        <h3 class="font-semibold text-white mb-4">Support</h3>
        <ul class="space-y-2">
          <li>
            <a href="/pages/support" class="text-gray-300 hover:text-primary transition-colors">
              Help Center
            </a>
          </li>
          <li>
            <a href="/pages/contact" class="text-gray-300 hover:text-primary transition-colors">
              Contact Us
            </a>
          </li>
          <li>
            <a href="/pages/faq" class="text-gray-300 hover:text-primary transition-colors">
              FAQ
            </a>
          </li>
          <li>
            <a href="/policies/refund-policy" class="text-gray-300 hover:text-primary transition-colors">
              Refund Policy
            </a>
          </li>
          <li>
            <a href="/policies/terms-of-service" class="text-gray-300 hover:text-primary transition-colors">
              Terms of Service
            </a>
          </li>
        </ul>
      </div>

      {%- comment -%} Newsletter & Contact {%- endcomment -%}
      <div>
        <h3 class="font-semibold text-white mb-4">Stay Connected</h3>
        <p class="text-gray-300 text-sm mb-4">
          Get notified about new products and exclusive deals.
        </p>
        
        <form action="{{ routes.root_url }}contact#contact_form" method="post" id="ContactFooter" accept-charset="UTF-8" class="footer__newsletter newsletter-form">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="‚úì">
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="flex space-x-2 mb-6">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="input flex-1"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ 'newsletter.label' | t }}"
              required
            >
            <button type="submit" class="btn btn-primary" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
              <span class="text-sm">üìß</span>
            </button>
          </div>
        </form>

        {%- if form.posted_successfully? -%}
          <h3 class="newsletter-form__message newsletter-form__message--success body-small" id="ContactFooter-success" tabindex="-1" autofocus>
            {% render 'icon-success' -%}
            {{ 'newsletter.success' | t }}
          </h3>
        {%- elsif form.errors -%}
          <div class="newsletter-form__message body-small" id="ContactFooter-error">
            <h3 class="form__message" tabindex="-1" autofocus>
              {% render 'icon-error' -%}
              {{ 'templates.contact.form.error_heading' | t }}
            </h3>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#ContactFooter-{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="flex items-center space-x-2 text-sm text-gray-300">
          <span>üë•</span>
          <span>Join 10,000+ satisfied customers</span>
        </div>
      </div>
    </div>

    {%- comment -%} Bottom Section {%- endcomment -%}
    <div class="border-t border-gray-600 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-300 text-sm">
        ¬© {{ 'now' | date: "%Y" }} {{ shop.name | default: 'BadRex Store' }}. All rights reserved.
      </p>
      
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/policies/privacy-policy" class="text-gray-300 hover:text-primary text-sm transition-colors">
          Privacy Policy
        </a>
        <a href="/policies/terms-of-service" class="text-gray-300 hover:text-primary text-sm transition-colors">
          Terms
        </a>
        <a href="/policies/shipping-policy" class="text-gray-300 hover:text-primary text-sm transition-colors">
          Shipping
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer .text-gradient {
    background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* RTL Support */
  [dir="rtl"] .footer .grid {
    direction: rtl;
  }

  [dir="rtl"] .footer .flex {
    flex-direction: row-reverse;
  }

  [dir="rtl"] .footer .space-x-2 > * + * {
    margin-left: 0;
    margin-right: 0.5rem;
  }

  [dir="rtl"] .footer .space-x-6 > * + * {
    margin-left: 0;
    margin-right: 1.5rem;
  }
</style>

